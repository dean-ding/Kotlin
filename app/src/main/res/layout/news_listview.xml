<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_view_image"
            android:layout_width="105dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:contentDescription="@string/AFC"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/list_view_image"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/list_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/tab_text_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/list_view_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/tab_line_color"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/list_view_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/list_view_keyword"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:textColor="@color/tab_line_color"
                android:textSize="12sp"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/list_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/list_view_line_color"/>

</LinearLayout>
